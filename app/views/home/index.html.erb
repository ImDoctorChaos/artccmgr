<% content_for(:title, 'Home') %>

<% unless @events.empty? %>
<!-- Events Carousel -->
<div id="carouselEvents" class="carousel slide d-none d-sm-block" data-ride="carousel">
  <div class="carousel-inner">
    <% @events.each_with_index do |event, index| %>
    <div class="carousel-item <%= 'active' if index == 0 %>">
      <img class="d-block w-100" src="http://placehold.it/800x200" alt="<%= event.name %>">
    </div>
    <% end %>
  </div>
</div>

<div class="row top-buffer"></div>
<!-- Events Carousel -->
<% end %>

<div class="card card-body bg-light">
  <h3> Welcome to ARTCC!</h3>
  <p class="top-buffer">
    Some random text here about your ARTCC and the local area. Which airports are
    fun to fly to and perhaps which are the busiest.
  </p>
</div>



<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
    <p<%= flash[:alert] %></p>
<% end %>

<% if user_signed_in? %>
    Yay, you're logged in.
    <br />
    <%= current_user.name_first %> <%= current_user.name_last %> (<%= current_user.rating %>)
    <br />
    You are in group: <%= current_user.group.name %>
    <br />
    You have the following permissions:
    <ul>
      <% current_user.group.permissions.each do |permission| %>
        <li><%= permission %></li>
      <% end %>
    </ul>
    <br />
    <%= link_to 'Logout', users_sign_out_path, method: :delete %>
<% else %>
    You have the following permissions:
    <ul>
      <% Group.find_by(name: 'public').permissions.each do |permission| %>
          <li><%= permission %></li>
      <% end %>
    </ul>
    <br />
    <%= link_to 'Login with VATSIM', user_vatsim_omniauth_authorize_path %>
<% end %>

<br/>
<%= link_to 'Leave Feedback', new_feedback_path %>
