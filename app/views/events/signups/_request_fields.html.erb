<div class="form-group row nested-fields">
  <div class="col-sm-8">
    <% positions = options_from_collection_for_select(@event.event_positions.order(:callsign), :id, :callsign, f.object.position) %>
    <%= f.select :position_id, positions, {prompt: 'Select position'}, multiple: false, class: 'form-control position-options' %>
  </div>
  <div class="col-sm-4">
    <%= link_to_remove_association 'Remove', f, class: 'btn btn-outline-danger' %>
  </div>
</div>