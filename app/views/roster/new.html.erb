<% content_for(:title, 'New User') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header bg-dark text-light">
        <div class="row">
          <div class="col-auto mr-auto pt-1">
            New User
          </div>
          <div class="col-auto">
            <div class="btn-group" data-toggle="buttons">
              <label id="query_api_btn" class="btn btn-sm btn-success active" data-toggle="tooltip" data-placement="bottom" title="Attempt to fill in user information automatically">
                <input type="checkbox" id="query_api" checked>
                <span id="query_api_status">Autofill On</span>
              </label>
            </div>

          </div>
        </div>
      </div>

      <div class="card-body pl-0 pr-0">
        <%= render 'form' %>
      </div>

    </div>
  </div>
</div>
