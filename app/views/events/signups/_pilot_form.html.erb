<div class="container">
  <%= form_for pilot do |f| %>
    <div class="form-group row">
      <label for="submitter" class="col-sm-3 col-form-label">Name</label>
      <div class="col-sm-9">
        <input type="name" class="form-control" placeholder="<%= current_user.name_full %> (<%= current_user.cid %>)" readonly>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :callsign, class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-9">
        <% pilot.errors[:callsign].present? ? callsign_invalid = 'is-invalid' : callsign_invalid = nil %>
        <%= f.text_field :callsign, class: "form-control text-uppercase #{callsign_invalid}" %>
        <% unless callsign_invalid.nil? %>
          <div class="invalid-feedback">
            Please provide your callsign
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12 text-center">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>