<% content_for(:title, 'Edit Endorsement') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header bg-dark text-light">
        <div class="row">
          <div class="col-auto mr-auto pt-1">
            Edit Endorsement for
            <%= @controller.name_first %> <%= @controller.name_last %>
            <%= "(#{@controller.initials})" unless @controller.initials.blank? %>
          </div>
          <% if policy(@endorsement).destroy? -%>
              <div class="col-auto">
                <%= link_to '#', class: 'btn btn-sm btn-outline-danger', title: 'Delete Endorsement', data: {toggle: :modal, target: '#endorsementDeleteModal'} do %>
                    <%= fa_icon('trash') %> Delete
                <% end %>
              </div>
          <% end -%>
        </div>
      </div>

      <div class="card-body pl-0 pr-0">
        <%= render 'form' %>
      </div>

    </div>
  </div>
</div>

<!-- Deletion Modal -->
<div class="modal fade" id="endorsementDeleteModal" tabindex="-1" role="dialog" aria-labelledby="endorsementDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="endorsementDeleteModalLabel">
          <%= fa_icon 'exclamation-triangle', class: 'text-danger' %> Delete Endorsement
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to delete the <b><%= @endorsement.certification.name %></b> endorsement for <%= @controller.name_first %> <%= @controller.name_last %>?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to 'Delete', user_endorsement_path(@endorsement.user, @endorsement), method: :delete, class: 'btn btn-danger', data: { dismiss: :modal } %>
      </div>
    </div>
  </div>
</div>
<!-- End Deletion Modal -->
