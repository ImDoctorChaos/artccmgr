<% content_for(:title, 'Edit Airport') %>

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header bg-dark text-light">
        <div class="row">
          <div class="col-auto mr-auto pt-1">
            Edit Airport
          </div>
          <% if policy(@airport).destroy? -%>
              <div class="col-auto">
                <%= link_to '#', class: 'btn btn-sm btn-outline-danger', title: 'Delete Airport', data: {toggle: :modal, target: '#airportDeleteModal'} do %>
                    <%= fa_icon('trash') %> Delete
                <% end %>
              </div>
          <% end -%>
        </div>
      </div>

      <div class="card-body pl-0 pr-0">
        <%= render 'form' %>
      </div>

    </div>
  </div>
</div>

<!-- Deletion Modal -->
<div class="modal fade" id="airportDeleteModal" tabindex="-1" role="dialog" aria-labelledby="airportDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="airportDeleteModalLabel">
          <%= fa_icon 'exclamation-triangle', class: 'text-danger' %> Delete Airport
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to delete <%= @airport.name %> (<%= @airport.icao %>)?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to 'Delete', airport_path(@airport), method: :delete, class: 'btn btn-danger', data: { dismiss: :modal } %>
      </div>
    </div>
  </div>
</div>
<!-- End Deletion Modal -->